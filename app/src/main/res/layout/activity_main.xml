<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main"
        android:src="@drawable/blur_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/ConstraintStyle">

            <ImageView
                android:id="@+id/bomdod_icon"
                style="@style/IconsStyle"
                android:src="@drawable/bomdod"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/bomdod_text"
                style="@style/TextTitleStyle"
                android:text="@string/bomdod"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/bomdod_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bomdod_time"
                style="@style/TextTimeStyle"
                android:text="@string/bomdod"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/ConstraintStyle">

            <ImageView
                android:id="@+id/quyosh_icon"
                style="@style/IconsStyle"
                android:src="@drawable/quyosh"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/quyosh_text"
                android:text="@string/quyosh"
                style="@style/TextTitleStyle"
                android:layout_width="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/quyosh_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/quyosh_time"
                style="@style/TextTimeStyle"
                android:text="@string/quyosh"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/ConstraintStyle">

            <ImageView
                android:id="@+id/peshin_icon"
                style="@style/IconsStyle"
                android:src="@drawable/peshin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/peshin_text"
                style="@style/TextTitleStyle"
                android:text="@string/peshin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/peshin_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/peshin_time"
                style="@style/TextTimeStyle"
                android:text="@string/peshin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/ConstraintStyle">

            <ImageView
                android:id="@+id/asr_icon"
                style="@style/IconsStyle"
                android:src="@drawable/asr"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/asr_text"
                style="@style/TextTitleStyle"
                android:text="@string/asr"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/asr_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/asr_time"
                style="@style/TextTimeStyle"
                android:text="@string/asr"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/ConstraintStyle">

            <ImageView
                android:id="@+id/shom_icon"
                style="@style/IconsStyle"
                android:src="@drawable/shom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/shom_text"
                style="@style/TextTitleStyle"
                android:text="@string/shom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/shom_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/shom_time"
                style="@style/TextTimeStyle"
                android:text="@string/shom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/ConstraintStyle">

            <ImageView
                android:id="@+id/xufton_icon"
                style="@style/IconsStyle"
                android:src="@drawable/xufton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/xufton_text"
                style="@style/TextTitleStyle"
                android:text="@string/xufton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/xufton_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/xufton_time"
                style="@style/TextTimeStyle"
                android:text="@string/xufton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</FrameLayout>