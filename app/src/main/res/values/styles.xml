<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NamozVaqtlari" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="FullScreenActivity" parent="Theme.NamozVaqtlari">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="IconsStyle">
        <item name="android:layout_width">@dimen/_28dp</item>
        <item name="android:layout_height">@dimen/_28dp</item>
        <item name="android:layout_margin">@dimen/_16dp</item>
    </style>

    <style name="ConstraintStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginEnd">@dimen/_16dp</item>
    </style>

    <style name="TextTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:padding">@dimen/_1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="TextTimeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginEnd">@dimen/_16dp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

</resources>